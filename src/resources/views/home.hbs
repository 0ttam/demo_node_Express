<div class='mt-4'>
    <div class="row">
        {{#each courses}}
        <div class='col-sm6 col-lg-4'>
            <div class='card card-course-item' style='width: 18rem;'>
                <a href='/courses/{{this.link}}'>
                    <img src='{{this.image}}' class='card-img-top' alt='{{this.name}}' />
                </a>
                <div class='card-body'>
                    <a href='/course/{{this.link}}'>
                        <h5 class='card-title'>{{this.name}}</h5>
                    </a>
                    <p class='card-text'>{{this.description}}</p>
                    <a href='#' class='btn btn-primary'>Mua khoa hoc</a>
                </div>
            </div>
        </div>

    </div>
    {{/each}}

</div>
</div>