<div class='mt-4'>
    <div>
        <h3>Thùng rác của bạn</h3>
        <a href='/me/stored/courses'>Danh sách khóa học</a>
    </div>
    <table class='table mt-4'>
        <thead>
            <tr>
                <th scope='col'>#</th>
                <th scope='col'>Video Name</th>
                <th scope='col'>Level</th>
                <th scope='col' colspan='2'>create Date</th>

            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <th scope='row'>{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.level}}</td>
                    <td>{{this.createdAt}}</td>
                    <td>
                        <a
                            href=''
                            class='btn btn-link btn-restore'
                            data-id='{{this._id}}'
                        >Khôi phục</a>
                        <a
                            href=''
                            class='btn btn-link'
                            data-id='{{this._id}}'
                            data-toggle='modal'
                            data-target='#delete-video-modal'
                        >Xóa vĩnh viễn</a>
                    </td>
                </tr>
            {{else}}
                <tr>
                    <td colspan='5' class='text-center'>Thùng rác của bạn trống.
                        <a href='/me/stored/courses'>Đến danh sách khóa học</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{! modal remove Video }}

<div
    class='modal fade'
    id='delete-video-modal'
    tabindex='-1'
    aria-labelledby='exampleModalLabel'
    aria-hidden='true'
>
    <div class='modal-dialog'>
        <div class='modal-content'>
            <div class='modal-header'>
                <h5 class='modal-title' id='exampleModalLabel'>Xóa Video</h5>
                <button
                    type='button'
                    class='close'
                    data-dismiss='modal'
                    aria-label='Close'
                >
                    <span aria-hidden='true'>&times;</span>
                </button>
            </div>
            <div class='modal-body'>
                Bạn chắc chắn xóa vĩnh viễn Video?
            </div>
            <div class='modal-footer'>
                <button
                    type='button'
                    class='btn btn-primary'
                    data-dismiss='modal'
                >Dừng việc xóa</button>
                <button
                    id='btn-delete-video'
                    type='button'
                    class='btn btn-danger'
                >Xóa vĩnh viễn</button>
            </div>
        </div>
    </div>
</div>

{{! Delete hidden form }}
<form name='delete-video-form' method='POST'></form>
{{! Restore hidden form }}
<form name='restore-video-form' method='POST'></form>

{{! Scripts }}
<script>
    document.addEventListener("DOMContentLoaded", function () { var videoId; var
    btnDeleteVideo = document.getElementById('btn-delete-video'); var deleteForm
    = document.forms['delete-video-form']; var btnRestore = $('.btn-restore');
    var restoreForm = document.forms['restore-video-form']; // When dialog
    confirm show $('#delete-video-modal').on('show.bs.modal', function (event) {
    var button = $(event.relatedTarget); videoId = button.data('id'); }); //
    When click button Delete btnDeleteVideo.onclick = function () {
    deleteForm.action = '/courses/' + videoId + '/force?_method=DELETE';
    deleteForm.submit(); } //Restore button click btnRestore.click(function
    (event) { event.preventDefault(); var videoId = $(this).data('id');
    restoreForm.action = '/courses/' + videoId + '/restore?_method=PATCH';
    restoreForm.submit(); }) })

</script>